<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailActivity">

    <ImageView
        android:id="@+id/detail_img"
        android:layout_width="160dp"
        android:layout_height="168dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:scaleType="fitXY"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/detail_username"
        style="@style/TextContent.Bold"
        android:layout_marginStart="12dp"
        android:textSize="18dp"
        android:layout_marginTop="16dp"
        android:text="@string/user_username"
        app:layout_constraintStart_toEndOf="@+id/detail_img"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="24dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintStart_toEndOf="@+id/detail_img"
        app:layout_constraintTop_toBottomOf="@+id/detail_username">

        <TextView
            android:id="@+id/detail_followers"
            style="@style/TextContent.Bold"
            android:text="300" />

        <TextView
            android:id="@+id/textView"
            style="@style/TextContent"
            android:layout_marginTop="8dp"
            android:text="Followers" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="27dp"
        android:layout_marginTop="24dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintStart_toEndOf="@+id/linearLayout"
        app:layout_constraintTop_toBottomOf="@+id/detail_username">

        <TextView
            android:id="@+id/detail_following"
            style="@style/TextContent.Bold"
            android:text="200" />

        <TextView
            android:id="@+id/textView2"
            style="@style/TextContent"
            android:layout_marginTop="8dp"
            android:text="Following" />
    </LinearLayout>

    <TextView
        android:id="@+id/detail_name"
        style="@style/TextContent"
        android:layout_marginStart="90dp"
        android:layout_marginTop="35dp"
        android:text="TextView"
        android:textSize="18dp"
        app:layout_constraintStart_toEndOf="@+id/textView6"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <TextView
        android:id="@+id/textView5"
        style="@style/TextContent.Bold"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:text="BioData"
        android:textSize="32dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/detail_img" />

    <TextView
        android:id="@+id/textView6"
        style="@style/TextContent.Bold"
        android:layout_marginStart="20dp"
        android:layout_marginTop="35dp"
        android:text="Name"
        android:textSize="18dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <TextView
        android:id="@+id/textView10"
        style="@style/TextContent.Bold"
        android:layout_marginStart="20dp"
        android:layout_marginTop="36dp"
        android:text="Address"
        android:textSize="18dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView8" />

    <TextView
        android:id="@+id/detail_location"
        style="@style/TextContent"
        android:layout_marginStart="70dp"
        android:layout_marginTop="36dp"
        android:text="TextView"
        android:textSize="18dp"
        app:layout_constraintStart_toEndOf="@+id/textView10"
        app:layout_constraintTop_toBottomOf="@+id/detail_company" />

    <TextView
        android:id="@+id/detail_company"
        style="@style/TextContent"
        android:layout_marginStart="60dp"
        android:layout_marginTop="36dp"
        android:text="TextView"
        android:textSize="18dp"
        app:layout_constraintStart_toEndOf="@+id/textView8"
        app:layout_constraintTop_toBottomOf="@+id/detail_name" />

    <TextView
        android:id="@+id/textView8"
        style="@style/TextContent.Bold"
        android:layout_marginStart="20dp"
        android:layout_marginTop="36dp"
        android:text="Company"
        android:textSize="18dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <TextView
        android:id="@+id/textView3"
        style="@style/TextContent"
        android:layout_marginStart="12dp"
        android:layout_marginTop="44dp"
        android:text="Total Repository:"
        app:layout_constraintStart_toEndOf="@+id/detail_img"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

    <TextView
        android:id="@+id/detail_repository"
        style="@style/TextContent.Bold"
        android:layout_marginStart="16dp"
        android:layout_marginTop="43dp"
        android:text="Repository"
        app:layout_constraintStart_toEndOf="@+id/textView3"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2" />

</androidx.constraintlayout.widget.ConstraintLayout>